<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--</style>-->

    <style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="android:colorPrimary">@color/primary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight and colorSwitchThumbNormal. -->
    </style>

    <!-- Theme for the GymActivity -->
    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Styles for FABs -->
    <style name="FloatingActionButton" parent="android:Widget.Material.Button">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:stateListAnimator">@anim/fab_state_list_animator</item>
    </style>

    <style name="FloatingActionButton.Default">
        <item name="android:background">@drawable/fab_background</item>
    </style>

    <style name="FloatingActionButton.Highlight">
        <item name="android:background">@drawable/fab_background_highlight</item>
    </style>

    <!-- Style for cards -->
    <style name="Card" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/card_margin</item>
        <item name="android:layout_marginTop">@dimen/card_margin</item>
        <item name="android:layout_marginStart">@dimen/card_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_side_margin</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <!-- Style for TextView -->
    <style name="TextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">10dp</item>
    </style>


    <style name="TextView.Header" parent="TextView">
        <item name="android:layout_height">@dimen/card_header_height</item>
        <item name="android:background">@color/primaryDark</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="TextView.Header.Small" parent="TextView.Header">
        <item name="android:textSize">25sp</item>
    </style>


    <style name="TextView.Content" parent="TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="TextView.Content.CalorieItemVariation" parent="TextView.Content">
        <item name="android:textSize">25sp</item>
    </style>


    <style name="TextView.Content.MainInfo" parent="TextView.Content">
        <item name="android:textSize">60sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextView.Content.MainInfo.GeneralVariation" parent="TextView.Content.MainInfo">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Content.MainInfo.WeatherVariation" parent="TextView.Content.MainInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">#66333333</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <!-- cf. xml for padding start & end-->
    </style>

    <style name="TextView.Content.MainInfo.GeneralVariation.CalorieVariation"
        parent="TextView.Content.MainInfo.GeneralVariation">
        <item name="android:textSize">50sp</item>
    </style>


</resources>
