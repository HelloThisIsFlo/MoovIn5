<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@drawable/motivation_background</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight and colorSwitchThumbNormal. -->
    </style>

    <!-- Theme for the GymActivity -->
    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
    </style>

    <!-- Styles for FABs -->
    <style name="FloatingActionButton" parent="android:Widget.Material.Button">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:stateListAnimator">@anim/fab_state_list_animator</item>
    </style>

    <style name="FloatingActionButton.Default">
        <item name="android:background">@drawable/fab_background</item>
    </style>

    <style name="FloatingActionButton.Highlight">
        <item name="android:background">@drawable/fab_background_highlight</item>
    </style>

    <!-- Style for cards -->
    <style name="Card" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/card_margin</item>
        <item name="android:layout_marginTop">@dimen/card_margin</item>
        <item name="android:layout_marginStart">@dimen/card_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_side_margin</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>
    <style name="Card.GymHomeVariation" parent="Card">
        <item name="android:layout_width">@dimen/main_card_home_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Style for TextView -->
    <style name="TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="TextView.LoadingVariation" parent="TextView">
        <item name="android:textSize">@dimen/text_size_loading</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Header" parent="TextView">
        <item name="android:layout_height">@dimen/card_header_height</item>
        <item name="android:background">@color/primaryDark</item>
        <item name="android:textSize">@dimen/text_size_header</item>
    </style>

    <style name="TextView.Header.Small" parent="TextView.Header">
        <item name="android:textSize">@dimen/text_size_header_small</item>
    </style>



    <style name="TextView.Content" parent="TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="TextView.Content.GymVariation" parent="TextView.Content">
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="TextView.Content.CalorieItemVariation" parent="TextView.Content">
        <item name="android:textSize">@dimen/text_size_content_calorie_item</item>
    </style>


    <style name="TextView.Content.MainInfo" parent="TextView.Content">
        <item name="android:textSize">@dimen/text_size_content_main_info</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextView.Content.MainInfo.GeneralVariation" parent="TextView.Content.MainInfo">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Content.MainInfo.WeatherVariation" parent="TextView.Content.MainInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/weatherTint</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <!-- cf. motivation_card_weather.xmlweather.xml for padding start & end-->
    </style>

    <style name="TextView.Content.MainInfo.GeneralVariation.CalorieVariation"
        parent="TextView.Content.MainInfo.GeneralVariation">
        <item name="android:textSize">@dimen/text_size_content_main_info_calories</item>
    </style>

    <style name="TextView.Content.MainInfo.GeneralVariation.HomeVariation"
        parent="TextView.Content.MainInfo.GeneralVariation">
        <item name="android:textSize">@dimen/text_size_content_main_info_home</item>
    </style>


</resources>
