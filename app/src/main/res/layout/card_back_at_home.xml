<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/Card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/back_at_home_card_view"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            style="@style/TextView.Header.Small"
            android:text="@string/card_header_back_at_home"
            />

        <TextView
            style="@style/TextView.Content.MainInfo.GeneralVariation"
            android:id="@+id/back_at_home_time_text_view"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primaryDark"/>

        <TextView
            style="@style/TextView.Content"
            android:id="@+id/back_at_home_motivational_text_view"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>