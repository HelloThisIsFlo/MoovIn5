<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/Card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weather_card_view"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/weather_header_text_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_header_height"
            android:text="@string/card_header_weather"
            android:background="@color/primaryDark"
            android:textColor="#FFFFFF"
            android:gravity="center_vertical"
            android:textSize="35sp"
            android:layout_alignParentTop="true"
            />

        <!-- AccentTint added at the foreground to darken the image -->
        <!-- layout_height is set dynamically in CardWeather contructor -->
        <FrameLayout
            android:id="@+id/weather_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/weather_header_text_view"
            android:foreground="@color/accentTint">
            <ImageView
                android:id="@+id/weather_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </FrameLayout>

        <TextView
            android:id="@+id/temperature_text_view"
            android:textSize="60sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#66333333"
            />

        <TextView
            android:id="@+id/forecast_text_view"
            android:textSize="60sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/temperature_text_view"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:background="#66333333"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>