<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/Card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@color/primaryDark"
    android:id="@+id/ad_card_view"
    android:layout_height="wrap_content"
    >

    <!-- TODO set message for people using adBlockers -->
    <!-- Size : 300 x 250 -->
    <!-- Because adSize = MEDIUM_RECTANGLE -->
    <!-- https://developers.google.com/mobile-ads-sdk/docs/admob/android/banner#banner_size -->
    <FrameLayout
        android:id="@+id/ad_card_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"/>

</android.support.v7.widget.CardView>