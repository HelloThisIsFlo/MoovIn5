<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/primary"
    >

    <ImageView
        android:id="@+id/calories_list_item_image_view"
        android:layout_width="@dimen/calories_recycler_view_list_item_height"
        android:layout_height="@dimen/calories_recycler_view_list_item_height"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:background="@color/accent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <TextView
        style="@style/TextView.Content.CalorieItemVariation"
        android:id="@+id/calories_list_item_text_view"
        android:layout_toEndOf="@id/calories_list_item_image_view"
        android:layout_centerVertical="true"/>


</RelativeLayout>


