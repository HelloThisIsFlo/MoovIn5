<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tutorial_background"
    tools:context="com.shockn745.moovin5.tutorial.TutorialActivityStep2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/tutorial_step_4_info_card_view"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/tutorialTint"
            card_view:cardElevation="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/tutorial_step_4_content_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:gravity="start"/>

        </android.support.v7.widget.CardView>
    </FrameLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/tutorial_step_4_info_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/tutorialTint"
        card_view:cardElevation="0dp"
        android:layout_above="@+id/tutorial_step_4_horizontal_separator"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/tutorial_step_4_info_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:gravity="start"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tutorial_step_4_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tutorial_step_4_vertical_separator"/>

    <TextView
        android:id="@+id/tutorial_step_4_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tutorial_step_4_vertical_separator"/>

    <View
        android:id="@+id/tutorial_step_4_vertical_separator"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@id/tutorial_step_4_next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/tutorial_step_4_horizontal_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_above="@id/tutorial_step_4_next"
        />



</RelativeLayout>
