<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/Card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calories_card_view"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/primaryDark"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/calories_text_view"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            />

        <!-- TODO check if possible to disable scroll on xml file -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/calories_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/calories_text_view"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>